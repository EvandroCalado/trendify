generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Size {
  XS
  S
  M
  L
  XL
  XXL
}

enum Gender {
  men
  women
  kid
  unisex
}

model Category {
  id   String @id @default(cuid())
  name String @unique

  products Product[]

  @@map("categories")
}

model ProductImage {
  id  Int    @id @default(autoincrement())
  url String

  product   Product @relation(fields: [productId], references: [id])
  productId String

  @@map("product_images")
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String
  slug        String   @unique
  price       Float    @default(0)
  inStock     Int
  tags        String[] @default([])
  size        Size[]   @default([])
  gender      Gender

  images ProductImage[]

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  @@index([gender])

  @@map("products")
}
